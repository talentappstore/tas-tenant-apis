{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "accessPoint": {
      "type": "object",
      "description": "Link to an external result.",
      "properties": {
        "uri": {
          "title": "URI",
          "type": "string",
          "format": "uri"
        },
        "typeCode": {
          "type": "string",
          "title": "Type",
          "enum": [
            "Individual",
            "Group"
          ]
        }
      }
    },
    "scoreNumeric": {
      "type": "object",
      "properties": {
        "kind": {
          "type": "string",
          "enum": [
            "ScoreNumeric"
          ],
          "options": {
            "hidden": true
          }
        },
        "type": {
          "title": "Type",
          "type": "string",
          "enum": [
            "Percentile",
            "Raw Score",
            "Stanine",
            "Sten",
            "T-score",
            "Z-score",
            "Intelligence Quotient",
            "Scaled",
            "Normal Curve",
            "GPA"
          ]
        },
        "value": {
          "title": "Value",
          "type": "number"
        }
      }
    },
    "scoreText": {
      "type": "object",
      "properties": {
        "kind": {
          "type": "string",
          "enum": [
            "Scoretext"
          ],
          "options": {
            "hidden": true
          }
        },
        "type": {
          "title": "Type",
          "type": "string",
          "enum": [
            "Grade Letter"
          ]
        },
        "value": {
          "title": "Value",
          "type": "string"
        }
      }
    },
    "score": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "title": "Numeric Score",
            "$ref": "#/definitions/scoreNumeric"
          },
          {
            "title": "Text Score",
            "$ref": "#/definitions/scoreText"
          }
        ]
      }
    },
    "assessedCompetency": {
      "title": "Assessed Competency",
      "type": "object",
      "description": "A specified competency is a reference to a particular competency at a specified level of proficiency",
      "properties": {
        "id": {
          "title": "Name",
          "type": "integer"
        },
        "proficiencyLevel": {
          "title": "Proficiency Level",
          "$ref": "#/definitions/score"
        }
      }
    },
    "passedFlag": {
      "title": "Pass?",
      "type": "boolean"
    },
    "result": {
      "type": "object",
      "properties": {
        "id": {
          "title": "Result Name",
          "type": "string"
        },
        "description": {
          "title": "Description",
          "type": "string"
        },
        "passedFlag": {
           "$ref": "#/definitions/passedFlag"
        },
        "score": {
          "title": "Score",
          "$ref": "#/definitions/score"
        },
        "comment": {
          "title": "Comment",
          "type": "string"
        },
        "bandID": {
          "title": "Band",
          "type": "string"
        },
        "assessedCompetency": {
          "title": "Assessed Competency",
          "$ref": "#/definitions/assessedCompetency"
        }
      }
    },
    "attachmentType": {
      "title": "Name",
      "type": "string",
      "description": "Only one document with this name can be attached to an assessment result."
    },
    "attachmentWrite": {
      "type": "object",
      "properties": {
        "attachmentType": {
          "$ref": "#/definitions/attachmentType"
        },
        "fileUpload": {
          "$ref": "fileUpload.json"
        }
      },
      "required": [
        "attachmentType",
        "fileUpload"
      ]
    },
    "attachmentRead": {
      "type": "object",
      "properties": {
        "attachmentType": {
          "$ref": "#/definitions/attachmentType"
        },
        "fileDownload": {
          "$ref": "fileDownload.json"
        }
      },
      "required": [
        "attachmentType",
        "fileDownload"
      ]
    },
    "assessmentDetailWrite": {
      "properties": {
        "assessmentOverallResult": {
          "title": "Overall Result",
          "$ref": "#/definitions/result"
        },
        "assessmentDetailedResults": {
          "title": "Result Details",
          "type": "array",
          "items": {
            "$ref": "#/definitions/result"
          }
        },
        "accessPoints": {
          "title": "Links",
          "type": "array",
          "items": {
            "$ref": "#/definitions/accessPoint"
          }
        },
        "attachments": {
          "title": "Attachments",
          "type": "array",
          "items": {
            "$ref": "#/definitions/attachmentWrite"
          }
        }
      }
    },
    "assessmentDetailRead": {
      "properties": {
        "overallResult": {
          "title": "Overall Result",
          "$ref": "#/definitions/result"
        },
        "detailedResults": {
          "title": "Result Details",
          "type": "array",
          "items": {
            "$ref": "#/definitions/result"
          }
        },
        "accessPoints": {
          "title": "Links",
          "type": "array",
          "items": {
            "$ref": "#/definitions/accessPoint"
          }
        },
        "attachments": {
          "title": "Attachments",
          "type": "array",
          "items": {
            "$ref": "#/definitions/attachmentRead"
          }
        }
      }
    },
    "status": {
      "description": "The current disposition of an engagement",
      "enum": [
        "New",
        "In progress",
        "Complete",
        "Cancelled",
        "Expired",
        "Released",
        "Error"
      ]
    },
    "onHoldFlag": {
      "type": "boolean",
      "description": "whether the tenant has placed the engagement on hold"
    },
    "interactionUris": {
      "type": "object",
      "properties": {
        "candidateInteractionUri": {
          "type": ["string", "null"],
          "format": "uri",
          "description": "when present, a uri that the candidate must follow to complete some part of the engagement"
        },
        "userInteractionUri": {
          "type": ["string", "null"],
          "format": "uri",
          "description": "when present, a uri that the user (e.g. the recruiter) must follow to complete some part of the engagement"
        }
      },
      "additionalProperties": false,
      "required": [ "candidateInteractionUri", "userInteractionUri"]
    },
    "imageWriteUrl": {
      "description": "url of an image that will be loaded from an engagement app into the engagement hub to represent an engagement's status or an unstarted engagement type",
      "type": "string",
      "format": "url"
    },
    "imageReadUrl": {
      "description": "url of an image cached by the engagement hub to represent an engagement's status or an unstarted engagement type",
      "type": "string",
      "format": "url"
    }
  },
  "type": "object",
  "properties": {
    "meta": {
      "$ref": "engagementMeta.json"
    },
    "engagementType": {
      "type": "integer"
    },
    "status": {
      "$ref": "#/definitions/status"
    },
    "view": {
       "type": "integer",
       "description": "the id of the view that will give more details about the subject of this engagement (name, email address, job ID, etc.)"
    },
   "passedFlag": {
       "$ref": "#/definitions/passedFlag"
    },
    "interactionUris": {
      "$ref": "#/definitions/interactionUris"
    },
    "image": {
      "$ref": "#/definitions/imageReadUrl"
    },
    "onHoldFlag": {
      "$ref": "#/definitions/onHoldFlag"
    }
  },
  "additionalProperties": false,
  "required": [
    "meta",
    "engagementType",
    "status",
    "view",
    "interactionUris",
    "onHoldFlag"
  ]
}