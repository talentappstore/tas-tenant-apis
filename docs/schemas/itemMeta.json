{
  "$schema": "http://json-schema.org/draft-04/schema",
  "id": "http://talentappstore.github.io/tas-tenant-apis/item",
  "title": "tas-item",
  "description": "A question item for TAS",
  "definitions": {

    "tas-singleLine": {
      "$schema": "http://json-schema.org/draft-04/schema",
      "id": "http://talentappstore.github.io/tas-tenant-apis/tas-singleLine",
      "title": "tas-string",
      "description": "A text question item",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "singleLine"
        },
        "maxSize": {
          "description": "Max number of characters",
          "type": "number",
          "default": 140
        }
      }
    },

    "tas-multiline": {
      "$schema": "http://json-schema.org/draft-04/schema",
      "id": "http://talentappstore.github.io/tas-tenant-apis/tas-multiline",
      "title": "tas-multiline",
      "description": "A multiline text question item",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "multiline"
        },
        "maxSize": {
          "description": "Max number of characters",
          "type": "number",
          "default": 1000
        }
      }
    },

    "tas-number": {
      "$schema": "http://json-schema.org/draft-04/schema",
      "id": "http://talentappstore.github.io/tas-tenant-apis/tas-number",
      "title": "tas-number",
      "description": "A number question item",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "number"
        },
        "maximum": {
          "description": "Max number size",
          "type": "number"
        },
        "minimum": {
          "description": "Min number size",
          "type": "number"
        }
      }
    },

    "tas-bool": {
      "$schema": "http://json-schema.org/draft-04/schema",
      "id": "http://talentappstore.github.io/tas-tenant-apis/tas-bool",
      "title": "tas-bool",
      "description": "A boolean question item",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "bool"
        },
        "trueString": {
          "description": "String that represents a true answer",
          "type": "string",
          "default": "Yes"
        },
        "falseString": {
          "description": "String that represents a false answer",
          "type": "string",
          "default": "No"
        }
      }
    },

    "tas-resume": {
      "$schema": "http://json-schema.org/draft-04/schema",
      "id": "http://talentappstore.github.io/tas-tenant-apis/tas-resume",
      "title": "tas-resume",
      "description": "A resume question item",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "resume"
        },
        "version": {
          "description": "Previous version ID",
          "type": "string"
        },
        "job": {
          "description": "ID for the job associated with this item",
          "type": "string"
        },
        "candidate": {
          "description": "ID for the candidate associated with this item",
          "type": "string"
        },
        "allowTyped": {
          "description": "Allow user to type resume instead of uploading file",
          "type": "boolean",
          "default": "false"
        },
        "maxTypedSize": {
          "description": "Max characters for a typed resume",
          "type": "number",
          "default": 4000
        },
        "accept": {
          "description": "Allowable file mime types",
          "type": "array",
          "items": { "type": "string" }
        },
        "maxSize": {
          "description": "Maximum size of the file in bytes",
          "type": "number",
          "default": 1000000
        }
      }
    },

    "tas-image": {
      "$schema": "http://json-schema.org/draft-04/schema",
      "id": "http://talentappstore.github.io/tas-tenant-apis/tas-image",
      "title": "tas-image",
      "description": "An image question item",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "image"
        },
        "accept": {
          "description": "Allowable file mime types",
          "type": "array",
          "items": { "type": "string" }
        },
        "maxSize": {
          "description": "Maximum size of the file in bytes",
          "type": "number",
          "default": 1000000
        },
        "ascpectRatio": {
          "description": "Required aspect ratio for this image",
          "type": "string"
        },
        "maxWidth": {
          "description": "Max width for this image",
          "type": "number"
        },
        "maxHeight": {
          "description": "Max height for this image",
          "type": "number"
        },
        "minWidth": {
          "description": "Min width for this image",
          "type": "number"
        },
        "minHeight": {
          "description": "Min height for this image",
          "type": "number"
        }
      }
    },

    "tas-signature": {
      "$schema": "http://json-schema.org/draft-04/schema",
      "id": "http://talentappstore.github.io/tas-tenant-apis/tas-signature",
      "title": "tas-signature",
      "description": "A signature question item",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "signature"
        }
      }
    },

    "tas-document": {
      "$schema": "http://json-schema.org/draft-04/schema",
      "id": "http://talentappstore.github.io/tas-tenant-apis/tas-document",
      "title": "tas-document",
      "description": "A document question item",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "document"
        },
        "accept": {
          "description": "Allowable file mime types",
          "type": "array",
          "items": { "type": "string" }
        },
        "maxSize": {
          "description": "Maximum size of the file in bytes",
          "type": "number",
          "default": 1000000
        },
        "signatureRequired": {
          "description": "If the document must be signed",
          "type": "boolean"
        }
      }
    },

    "tas-audio": {
      "$schema": "http://json-schema.org/draft-04/schema",
      "id": "http://talentappstore.github.io/tas-tenant-apis/tas-audio",
      "title": "tas-audio",
      "description": "An audio question item",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "audio"
        },
        "maxLength": {
          "description": "Max length of recording allowed (in minutes)",
          "type": "number"
        },
        "accept": {
          "description": "Allowable file mime types",
          "type": "array",
          "items": { "type": "string" }
        },
        "maxSize": {
          "description": "Maximum size of the file in bytes",
          "type": "number",
          "default": 1000000
        }
      }
    },

    "tas-video": {
      "$schema": "http://json-schema.org/draft-04/schema",
      "id": "http://talentappstore.github.io/tas-tenant-apis/tas-video",
      "title": "tas-video",
      "description": "An video question item",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "video"
        },
        "maxLength": {
          "description": "Max length of recording allowed (in minutes)",
          "type": "number"
        },
        "accept": {
          "description": "Allowable file mime types",
          "type": "array",
          "items": { "type": "string" }
        },
        "maxSize": {
          "description": "Maximum size of the file in bytes",
          "type": "number",
          "default": 1000000
        }
      }
    },

    "tas-avatar": {
      "$schema": "http://json-schema.org/draft-04/schema",
      "id": "http://talentappstore.github.io/tas-tenant-apis/tas-avatar",
      "title": "tas-avatar",
      "description": "An avatar image question item",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "avatar"
        },
        "user": {
          "description": "Unique ID for the user represented by avatar",
          "type": "string"
        },
        "accept": {
          "description": "Allowable file mime types",
          "type": "array",
          "items": { "type": "string" }
        },
        "maxSize": {
          "description": "Maximum size of the file in bytes",
          "type": "number",
          "default": 1000000
        }
      }
    },

    "tas-profile": {
      "$schema": "http://json-schema.org/draft-04/schema",
      "id": "http://talentappstore.github.io/tas-tenant-apis/tas-profile",
      "title": "tas-profile",
      "description": "A social profile question item",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "profile"
        },
        "acceptedNetworks": {
          "description": "List of accepted social networks",
          "type": "array",
          "items": { "type": "string" }
        },
        "defaultNetwork": {
          "description": "Default social network",
          "type": "string"
        }
      }
    },

    "tas-url": {
      "$schema": "http://json-schema.org/draft-04/schema",
      "id": "http://talentappstore.github.io/tas-tenant-apis/tas-url",
      "title": "tas-url",
      "description": "A url question item",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "url"
        },
        "maxSize": {
          "description": "Max number of characters",
          "type": "number",
          "default": 400
        }
      }
