{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "categoriesPatchOp": {
            "enum": [
                "add",
                "replace"
            ]
        },
        "categoriesPatch": {
            "type": "object",
            "properties": {
                "patchItems": {
                    "$ref": "categoriesActual.json"
                },
                "op": {
                    "$ref": "#/definitions/categoriesPatchOp"
                }
            },
            "additionalProperties": false,
            "required": [
                "op",
                "patchItems"
            ]
        },
        "application": {
            "type": "object",
            "properties": {
                "job": {
                    "type": "integer"
                },
                "items": {
                    "$ref": "./items.json"
                }
            },
            "additionalProperties": false,
            "required": []
        }
    },
    "type": "object",
    "properties": {
        "tracker": {
            "type": "integer"
        },
        "vcard": {
            "$ref": "jcard.json"
        },
        "resume": {
            "$ref": "fileUpload.json"
        },
        "jobNotifications": {
            "type": "boolean"
        },
        "newVideo": {
          "type": "integer",
          "description": "recording ID of the candidate's newly uploaded video - overwrites any existing video"
        },
        "newVoiceMessage": {
          "type": "integer",
          "description": "recording ID of the candidate's newly uploaded voice message - overwrites any existing voice message"
        },
        "categoriesPatch": {
            "$ref": "#/definitions/categoriesPatch"
        },
        "items": {
            "$ref": "items.json"
        },
        "applications": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/application"
            }
        }
    },
    "additionalProperties": false,
    "required": []
}