{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "candidateMessage": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "description": "a text message to the candidate regarding their proposed edit, may include links"
                },
                "level": {
                    "enum": [
                        "info",
                        "warning",
                        "error"
                    ]
                }
            },
            "required": [
                "message",
                "level"
            ],
            "additionalProperties": false
        },
        "amendedIntent": {
            "type": "object",
            "properties": {
                "tracker": {
                    "type": "integer",
                    "description": "just the same tracker that was passed in with the intent"
                },
                "jobs": {
                    "description": "the jobs that the candidate is interested in and the category values they want - as massaged by the ATS",
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                },
                "categories": {
                    "$ref": "./candidateEdit.json#/definitions/categoryPatchItems"
                }
            },
            "required": [],
            "additionalProperties": false
        },
        "resumeRule": {
            "type": "object",
            "properties": {
                "visible": {
                    "description": "can a resume be uploaded at all, and can existing resume be seen",
                    "type": "boolean"
                },
                "mandatory": {
                    "description": "is the resume mandatory - implies visible == true",
                    "type": "boolean"
                },
                "message": {
                    "description": "a message to help the candidate understand about uploading a resume - e.g. 'resume optional when a video is provided'",
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "required": [
                "visible",
                "mandatory"
            ]
        },
        "vCardRule": {
            "type": "object",
            "properties": {
                "someMandatory": {
                    "description": "a simple way to hint that key vcard fields (first name, last name, email address) are mandatory - probably will get replaced by more fine-grained scheme in the future",
                    "type": "boolean"
                }
            },
            "required": "someMandatory"
        },
        "documentAtUri": {
            "type": "object",
            "properties": {
                "directUri": {
                    "type": "string",
                    "description": "be sure this is secured"
                },
                "fileName": {
                    "type": "string"
                },
                "size": {
                    "type": "integer"
                }
            },
            "additionalProperties": false,
            "required": [
                "directUri",
                "fileName",
                "size"
            ]
        },
        "attachmentRule": {
            "type": "object",
            "properties": {
                "seq": {
                    "type": "integer"
                },
                "type": {
                    "type": "string"
                },
                "instructions": {
                    "type": "string"
                },
                "mandatory": {
                    "type": "boolean"
                },
                "allowMultiple": {
                    "type": "boolean"
                },
                "default": {
                    "$ref": "#/definitions/documentAtUri"
                }
            },
            "additionalProperties": false,
            "required": [
                "seq",
                "type",
                "instructions",
                "mandatory",
                "allowMultiple"
            ]
        },
        "attachmentRules": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/attachmentRule"
            }
        },
        "jobRule": {
            "type": "object",
            "description": "rules that are specific to a single job application (i.e., not candidate-level)",
            "properties": {
                "job": {
                    "type": "integer",
                    "description": "the job application these rules apply to (i.e the non-candidate level rules)"
                },
                "itemsRule": {
                      "$ref": "./schemaSchema.json"
                },
                "attachmentRules": {
                    "$ref": "#/definitions/attachmentRules"
                }
            },
            "additionalProperties": false
        },
        "jobRules": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/jobRule"
            }
        },
        "inputModel": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "resumeRule": {
                    "$ref": "#/definitions/resumeRule"
                },
                "vCardRule": {
                    "$ref": "#/definitions/vCardRule"
                },
                "attachmentRules": {
                    "$ref": "#/definitions/attachmentRules"
                },
                "jobRules": {
                    "$ref": "#/definitions/jobRules"
                },
                "itemsRule": {
                   "$ref": "./schemaSchema.json"
                }
            },
            "required": []
        }
    },
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "anonymous": {
            "type": "boolean",
            "description": "whether this edit spec was generated for an anonymous candidate"
        },
        "amendedIntent": {
            "$ref": "#/definitions/amendedIntent"
        },
        "inputModel": {
            "$ref": "#/definitions/inputModel"
        },
        "candidateMessage": {
            "$ref": "#/definitions/candidateMessage"
        }
    },
    "required": []
}