{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "recruiterRelation": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "list all openings related to the recruiter, who must be the logged in user."
                },
                "relationship": {
                    "enum": [
                        "owner",
                        "accessor"
                    ],
                    "description": "is the recruiter the owner, or can they act as if they were the owner (maybe the opening's owner is a coRecruiter)"
                }
            }
        },
        "match": {
            "type": "object",
            "description": "search parameters that don't well fit into the filter string",
            "properties": {
                "recruiter": {
                    "$ref": "#/definitions/recruiterRelation"
                },
                "categories": {
                    "$ref": "categoriesActual.json"
                }
            },
            "additionalProperties": false,
            "required": []
        }
    },
    "type": "object",
    "properties": {
        "match": {
            "$ref": "#/definitions/match"
        },
        "filter": {
            "type": "string",
            "description": "OData-style filter string, AND-ed with any match: see http://docs.oasis-open.org/odata/odata/v4.0/odata-v4.0-part2-url-conventions.html"
        },
        "orderby": {
            "type": "string",
            "description": "OData-style orderby string: see http://docs.oasis-open.org/odata/odata/v4.0/odata-v4.0-part2-url-conventions.html"
        },
        "top": {
            "type": "integer",
            "description": "OData-style top value: see http://docs.oasis-open.org/odata/odata/v4.0/odata-v4.0-part2-url-conventions.html"
        }
    },
    "additionalProperties": false,
    "required": [
    ]
}