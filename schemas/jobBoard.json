{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "description": "immutable id for this board"
    },
    "label": {
      "type": "string",
      "description": "label for this board, e.g. Graduate recruitment site"
    }
  },
  "required": [
    "id",
    "label"
  ],
  "additionalProperties": false
}