{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "remuneration": {
      "type": "object",
      "description": "See HR/XML OnBoardingDeploymentType",
      "properties": {
        "amount": {
          "type": "number",
          "description": "The monetary value of the object in which the amount is associated"
        },
        "rateIntervalCode": {
          "type": "string",
          "description": "See HR/XML PayRateIntervalCodeType"
        },
        "typeCode": {
          "type": "string",
          "description": "A code classifying the type of remuneration (HR/XML)"
        }
      }
    },
    "dutyEntryDate": {
      "type": "string",
      "format": "date-time",
      "description": "Per- HR-XML, the date the employee or human resource actually begins work or enters on duty"
    },
    "hireDate": {
      "type": "string",
      "format": "date-time",
      "description": "Per- HR-XML, The date on which the associated person was hired."
    },
    "hire": {
      "type": "object",
      "properties": {
        "remuneration": {
          "$ref": "#/definitions/remuneration"
        },
        "dutyEntryDate": {
          "$ref": "#/definitions/dutyEntryDate"
        },
        "hireDate": {
          "$ref": "#/definitions/hireDate"
        }
      },
	  "additionalProperties": false,
	  "required": [ "hireDate" ]
    }
  },
  "type": "object",
  "properties": {
    "hire": {
      "$ref": "#/definitions/hire"
    },
    "application": {
      "$ref": "applicationView.json#/definitions/application"
    },
    "job": {
      "$ref": "applicationView.json#/definitions/job"
    },
    "candidate": {
      "$ref": "applicationView.json#/definitions/candidate"
    },
    "jobCoordinator": {
      "$ref": "applicationView.json#/definitions/jobCoordinator"
    }
  },
  "required": [
    "hire",
    "application",
    "job",
    "candidate",
    "jobCoordinator"
  ],
  "additionalProperties": false
}