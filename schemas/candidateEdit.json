{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "documentOp": {
            "enum": [
                "add",
                "remove",
                "replace"
            ]
        },
        "attachmentPatch": {
            "properties": {
                "op": {
                    "$ref": "#/definitions/documentOp"
                },
                "name": {
                    "type": "string",
                    "description": "the attachment name, e.g. 'Drivers license'"
                },
                "fileUpload": {
                    "$ref": "./fileUpload.json"
                }
            }
        },
        "resumePatch": {
            "properties": {
                "op": {
                    "$ref": "#/definitions/documentOp"
                },
                "fileUpload": {
                    "$ref": "./fileUpload.json"
                }
            }
        },
        "attachmentPatches": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/attachmentPatch"
            }
        },
        "categoriesPatchOp": {
            "enum": [
                "add",
                "replace"
            ]
        },
        "categoryPatchItem": {
            "type": "object",
            "properties": {
                "category": {
                    "type": "integer"
                },
                "values": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                }
            },
            "additionalProperties": false,
            "required": [
                "category",
                "values"
            ]
        },
        "categoryPatchItems": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/categoryPatchItem"
            }
        },
        "categoriesPatch": {
            "type": "object",
            "properties": {
                "patchItems": {
                    "$ref": "#/definitions/categoryPatchItems"
                },
                "op": {
                    "$ref": "#/definitions/categoriesPatchOp"
                }
            },
            "additionalProperties": false,
            "required": [
                "op",
                "patchItems"
            ]
        },
        "application": {
            "type": "object",
            "properties": {
                "job": {
                    "type": "integer"
                },
                "attachmentPatches": {
                    "$ref": "#/definitions/attachmentPatches"
                },
                "items": {
                    "$ref": "./items.json"
                }
            },
            "additionalProperties": false,
            "required": []
        }
    },
    "type": "object",
    "properties": {
        "tracker": {
            "type": "integer"
        },
        "vcard": {
            "$ref": "./jcard.json"
        },
        "resumePatch": {
            "$ref": "#/definitions/resumePatch"
        },
        "jobNotifications": {
            "type": "boolean"
        },
        "newVideo": {
          "type": "integer",
          "description": "recording ID of the candidate's newly uploaded video - overwrites any existing video"
        },
        "newVoiceMessage": {
          "type": "integer",
          "description": "recording ID of the candidate's newly uploaded voice message - overwrites any existing voice message"
        },
        "categoriesPatch": {
            "$ref": "#/definitions/categoriesPatch"
        },
        "attachmentPatches": {
            "$ref": "#/definitions/attachmentPatches"
        },
        "items": {
            "$ref": "./items.json"
        },
        "applications": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/application"
            }
        }
    },
    "additionalProperties": false,
    "required": []
}