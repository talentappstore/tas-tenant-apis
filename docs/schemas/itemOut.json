{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "name": {
      "type": "string",
      "description": "name of the item"
    },
    "subItem": {
      "type": "object",
      "description": "an item unlocked based on a picklist choice",
      "properties": {
        "name": {
          "$ref": "#/definitions/name"
        },
        "value": {
          "$ref": "#/definitions/value"
        },
        "meta": {
          "$ref": "jsonSchemaSchema.json"
        }
      },
      "required": [
        "name",
        "value"
      ],
      "additionalProperties": false
    },
    "pickItem": {
      "type": "object",
      "properties": {
        "pickChoice": {
          "type": "string",
          "description": "the name of a choice that the user selected"
        },
        "subItems": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/subItem"
          },
          "description": "items unlocked based on a picklist choice"
        }
      },
      "required": [
        "pickChoice"
      ],
      "additionalProperties": false
    },
    "pickItems": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/pickItem"
      }
    },
    "display": {
      "type": "string",
      "description": "the value - including any subitems - rendered as an HTML fragment, e.g. suitable for embedding in a table cell, encoded using url encoding"
    },
    "booleanItem": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "boolean"
          ]
        },
        "name": {
          "$ref": "#/definitions/name"
        },
        "display": {
          "$ref": "#/definitions/display"
        },
        "meta": {
          "$ref": "jsonSchemaSchema.json"
        },
        "value": {
          "type": "boolean",
          "description": "json representation of a boolean item's current value"
        }
      },
      "additionalProperties": false,
      "required": [
        "type",
        "name",
        "value"
      ]
    },
    "stringItem": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "string"
          ]
        },
        "name": {
          "$ref": "#/definitions/name"
        },
        "display": {
          "$ref": "#/definitions/display"
        },
        "meta": {
          "$ref": "jsonSchemaSchema.json"
        },
        "value": {
          "type": "string",
          "description": "json representation of a string item's current value"
        }
      },
      "additionalProperties": false,
      "required": [
        "type",
        "name",
        "value"
      ]
    },
    "numberItem": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "number"
          ]
        },
        "name": {
          "$ref": "#/definitions/name"
        },
        "display": {
          "$ref": "#/definitions/display"
        },
        "meta": {
          "$ref": "jsonSchemaSchema.json"
        },
        "value": {
          "type": "number",
          "description": "json representation of a number item's current value"
        }
      },
      "additionalProperties": false,
      "required": [
        "type",
        "name",
        "value"
      ]
    },
    "dateItem": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "date"
          ]
        },
        "name": {
          "$ref": "#/definitions/name"
        },
        "display": {
          "$ref": "#/definitions/display"
        },
        "meta": {
          "$ref": "jsonSchemaSchema.json"
        },
        "value": {
          "type": "string",
          "format": "date-time",
          "description": "json representation of a date item's current value"
        }
      },
      "additionalProperties": false,
      "required": [
        "type",
        "name",
        "value"
      ]
    },
    "fileItem": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "file"
          ]
        },
        "name": {
          "$ref": "#/definitions/name"
        },
        "display": {
          "$ref": "#/definitions/display"
        },
        "meta": {
          "$ref": "jsonSchemaSchema.json"
        },
        "value": {
          "$ref": "fileDownload.json"
        }
      },
      "additionalProperties": false,
      "required": [
        "type",
        "name",
        "value"
      ]
    },
    "picklistItem": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "picklist"
          ]
        },
        "name": {
          "$ref": "#/definitions/name"
        },
        "display": {
          "$ref": "#/definitions/display"
        },
        "meta": {
          "$ref": "jsonSchemaSchema.json"
        },
        "value": {
          "$ref": "#/definitions/picklistItems"
        }
      },
      "additionalProperties": false,
      "required": [
        "type",
        "name",
        "value"
      ]
    }
  },
  "type": "object",
  "oneOf": [
    {
      "$ref": "#/definitions/booleanItem"
    },
    {
      "$ref": "#/definitions/stringItem"
    },
    {
      "$ref": "#/definitions/numberItem"
    },
    {
      "$ref": "#/definitions/dateItem"
    },
    {
      "$ref": "#/definitions/fileItem"
    },
    {
      "$ref": "#/definitions/picklistItem"
    }
  ]
}