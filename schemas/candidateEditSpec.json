{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "candidateMessage": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "description": "a text message to the candidate regarding their proposed edit, may include links"
                },
                "level": {
                    "enum": [
                        "info",
                        "warning",
                        "error"
                    ]
                }
            },
            "required": [
                "message",
                "level"
            ],
            "additionalProperties": false
        },
        "amendedIntent": {
            "type": "object",
            "properties": {
                "tracker": {
                    "type": "integer",
                    "description": "just the same tracker that was passed in with the intent"
                },
                "jobs": {
                    "description": "the jobs that the candidate is interested in and the category values they want - as massaged by the ATS",
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                },
                "categories": {
                    "$ref": "categoriesActual.json"
                }
            },
            "required": [],
            "additionalProperties": false
        },
        "resumeRule": {
            "type": "object",
            "properties": {
                "visible": {
                    "description": "can a resume be uploaded at all, and can existing resume be seen",
                    "type": "boolean"
                },
                "mandatory": {
                    "description": "is the resume mandatory - implies visible == true",
                    "type": "boolean"
                },
                "message": {
                    "description": "a message to help the candidate understand about uploading a resume - e.g. 'resume optional when a video is provided'",
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "required": [
                "visible",
                "mandatory"
            ]
        },
        "voiceMessageRule": {
            "type": "object",
            "properties": {
                "visible": {
                    "description": "can a voice message be uploaded at all, and can existing message be seen",
                    "type": "boolean"
                },
                "mandatory": {
                    "description": "is the voice message mandatory - implies visible == true",
                    "type": "boolean"
                },
                "message": {
                    "description": "a message to help the candidate understand about recording a message",
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "required": [
                "visible",
                "mandatory"
            ]
        },
        "vCardRule": {
            "type": "object",
            "properties": {
                "someMandatory": {
                    "description": "a simple way to hint that key vcard fields (first name, last name, email address) are mandatory - probably will get replaced by more fine-grained scheme in the future",
                    "type": "boolean"
                }
            },
            "required": "someMandatory",
            "additionalProperties": false
        },
        "jobRule": {
            "type": "object",
            "description": "rules specific to a single job application (i.e., not candidate-scoped)",
            "properties": {
                "job": {
                    "type": "integer",
                    "description": "the job application these rules apply to"
                },
                "itemsRule": {
                      "$ref": "./jsonSchemaSchema.json"
                }
            },
            "additionalProperties": false
        },
        "jobRules": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/jobRule"
            }
        },
        "inputModel": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "resumeRule": {
                    "$ref": "#/definitions/resumeRule"
                },
                "voiceMessageRule": {
                    "$ref": "#/definitions/voiceMessageRule"
                },
                "vCardRule": {
                    "$ref": "#/definitions/vCardRule"
                },
                "itemsRule": {
                   "$ref": "./jsonSchemaSchema.json"
                },
                "jobRules": {
                    "$ref": "#/definitions/jobRules"
                }
            },
            "required": []
        }
    },
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "amendedIntent": {
            "$ref": "#/definitions/amendedIntent"
        },
        "candidateMessage": {
            "$ref": "#/definitions/candidateMessage"
        },
        "inputModel": {
            "$ref": "#/definitions/inputModel"
        }
    },
    "required": []
}