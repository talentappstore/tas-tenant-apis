{
  "label": "Super grads",
  "domain": "www.supergrads.com",
  "defaultAdDuration": 30,
  "defaultLegacySourceCode": "SUPERGRADS",
  "defaultSetupErrorMessage": "At least one template must be created",
  "fields": [
    {
      "title": "Basic details",
      "instructions": "Please fill in all fields carefully for a great posting",
      "fields": [
        {
          "type": "generalField",
          "itemMeta": {
            "type": "picklist",
            "name": "advertiser-profile",
            "title": "Advertiser profile",
            "instructions": "This controls the branding of your job posting",
            "nullLabel": "Choose an advertiser",
            "minChoices": 1,
            "maxChoices": 1,
            "presentation": "showOne",
            "choices": [
              {
                "name": "Accounting",
                "isDefault": false
              },
              {
                "name": "Growth team",
                "isDefault": false
              }
            ]
          },
          "showInHeaders": true
        },
        {
          "type": "generalField",
          "itemMeta": {
            "type": "string",
            "name": "job-title",
            "title": "Job Title",
            "instructions": "The job's title"
          },
          "defaultFrom": "$.title",
          "showInHeaders": true
        },
        {
          "type": "generalField",
          "itemMeta": {
            "type": "string",
            "name": "job-description",
            "title": "Job Description",
            "instructions": "The job's description. See _blah_ for formatting hints"
          },
          "defaultFrom": "$.description",
          "showInHeaders": false
        },
        {
          "type": "generalField",
          "itemMeta": {
            "type": "number",
            "name": "min-salary",
            "title": "Minimum salary",
            "instructions": "Enter a lower salary for the posting. This is used to match to candidates."
          },
          "showInHeaders": false
        },
        {
          "type": "categoriesField"
        }
      ]
    }
  ]
}