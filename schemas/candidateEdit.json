{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "documentOp": {
            "enum": [
                "add",
                "remove",
                "replace"
            ]
        },
        "attachmentPatch": {
            "properties": {
                "op": {
                    "$ref": "#/definitions/documentOp"
                },
                "name": {
                    "type": "string",
                    "description": "the attachment name, e.g. 'Drivers license'"
                },
                "fileUpload": {
                    "$ref": "./fileUpload.json"
                }
            }
        },
        "resumePatch": {
            "properties": {
                "op": {
                    "$ref": "#/definitions/documentOp"
                },
                "fileUpload": {
                    "$ref": "./fileUpload.json"
                }
            }
        },
        "attachmentPatches": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/attachmentPatch"
            }
        },
        "categoriesPatchOp": {
            "enum": [
                "add",
                "replace"
            ]
        },
        "categoriesPatch": {
            "type": "object",
            "properties": {
                "categories": {
                    "$ref": "./categories.json"
                },
                "op": {
                    "$ref": "#/definitions/categoriesPatchOp"
                }
            },
            "additionalProperties": false
        },
        "application": {
            "type": "object",
            "properties": {
                "opening": {
                    "type": "integer"
                },
                "attachmentPatches": {
                    "$ref": "#/definitions/attachmentPatches"
                },
                "items": {
                    "$ref": "./items.json"
                }
            },
            "additionalProperties": false,
            "required": []
        }
    },
    "type": "object",
    "properties": {
        "tracker": {
            "type": "integer"
        },
        "vcard": {
            "$ref": "./jcard.json"
        },
        "resumePatch": {
            "$ref": "#/definitions/resumePatch"
        },
        "jobNotifications": {
            "type": "boolean"
        },
        "video": {
            "$ref": "./fileUpload.json"
        },
        "voiceMessage": {
            "$ref": "./fileUpload.json"
        },
        "categoriesPatch": {
            "$ref": "#/definitions/categoriesPatch"
        },
        "attachmentPatches": {
            "$ref": "#/definitions/attachmentPatches"
        },
        "items": {
            "$ref": "./items.json"
        },
        "applications": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/application"
            }
        }
    },
    "additionalProperties": false,
    "required": []
}