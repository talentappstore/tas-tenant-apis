        },
        "maxSize": {
          "description": "Max number of characters",
          "type": "number",
          "default": 40
        },
        "phoneTypes": {
          "description": "List of phone types allowed",
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },

    "tas-email": {
      "$schema": "http://json-schema.org/draft-04/schema",
      "id": "http://talentappstore.github.io/tas-tenant-apis/tas-email",
      "title": "tas-email",
      "description": "A email question item",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "email"
        }
      }
    },

    "tas-enum": {
      "$schema": "http://json-schema.org/draft-04/schema",
      "id": "http://talentappstore.github.io/tas-tenant-apis/tas-enum",
      "title": "tas-enum",
      "description": "An single-select question item",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "enum"
        },
        "options": {
          "description": "Possible string choices for this item",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "displayText": { "type": "string" }
            }
          }
        }
      }
    },

    "tas-enumMulti": {
      "$schema": "http://json-schema.org/draft-04/schema",
      "id": "http://talentappstore.github.io/tas-tenant-apis/tas-enumMulti",
      "title": "tas-enumMulti",
      "description": "An multi-select question item",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "enumMulti"
        },
        "options": {
          "description": "Possible string choices for this item",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "displayText": { "type": "string" }
            }
          }
        },
        "minSelections": {
          "description": "Minimum number of selections required",
          "type": "number"
        },
        "maxSelections": {
          "description": "Maximum number of selections allowed",
          "type": "number"
        }
      }
    },

    "tas-enumDetails": {
      "$schema": "http://json-schema.org/draft-04/schema",
      "id": "http://talentappstore.github.io/tas-tenant-apis/tas-enumDetails",
      "title": "tas-enumDetails",
      "description": "An more-details question item",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "enumDetails"
        },
        "options": {
          "description": "Possible string choices for this item",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "option": {
                "type": "object",
                "properties": {
                   "id": { "type": "string" },
                   "displayText": { "type": "string" }
                }
              },
              "hasMoreDetails": {"type": "boolean"},
              "maxLength": {"type": "number"}
            }
          }
        },
        "minSelections": {
          "description": "Minimum number of selections required",
          "type": "number"
        },
        "maxSelections": {
          "description": "Maximum number of selections allowed",
          "type": "number"
        }
      }
    },

    "tas-enumQuestions": {
      "$schema": "http://json-schema.org/draft-04/schema",
      "id": "http://talentappstore.github.io/tas-tenant-apis/tas-enumDetails",
      "title": "tas-enumQuestions",
      "description": "An more-questions question item",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "enumQuestions"
        },
        "options": {
          "description": "Possible string choices for this item",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "option": {
                "type": "object",
                "properties": {
                   "id": { "type": "string" },
                   "displayText": { "type": "string" }
                }
              },
              "hasMoreDetails": {"type": "boolean"},
              "followupQuestions": {
                 "type": "array",
                 "items": {
                    "allOf": { "$ref": "#" }
                 }
              }
            }
          }
        },
        "minSelections": {
          "description": "Minimum number of selections required",
          "type": "number"
        },
        "maxSelections": {
          "description": "Maximum number of selections allowed",
          "type": "number"
        }
      }
    },

    "tas-category": {
      "$schema": "http://json-schema.org/draft-04/schema",
      "id": "http://talentappstore.github.io/tas-tenant-apis/tas-category",
      "title": "tas-category",
      "description": "An catergory question item",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "catergory"
        },
        "options": {
          "description": "Possible string choices for this item",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "additionalProperties": { "type": "string" }
            }
          }
        },
        "minSelections": {
          "description": "Minimum number of selections required",
          "type": "number"
        },
        "maxSelections": {
          "description": "Maximum number of selections allowed",
          "type": "number"
        }
      }
    },

    "tas-geolocation": {
      "$schema": "http://json-schema.org/draft-04/schema",
