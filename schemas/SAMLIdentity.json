{
	"$schema":"http://json-schema.org/draft-04/schema#",
	"type":"object",
	"additionalProperties":false,
	"properties":{
		"id":"integer",
		"identity":{
			"type":"object",
			"additionalProperties":"false",
			"properties":{
				"principalType":{
					"enum":[
						"candidate",
						"employee"
					]
					
				},
				"principleSubType":{
					"enum":[
						"candiate.internal",
						"candidate.external"
					]
					
				},
				"id":"integer",
				"isActive":"boolean"
			},
			"required":[
				"principalType",
				"isActive"
			]
			
		},
		"personDetail":{
			"type":"object",
			"properties":{
				"kind": { "enum": ["personDetail"]},
				"email":"string",
				"title":"string",
				"firstName":"string",
				"lastName":"string",
				"phone":"string",
				"locale":"string",
				"language":"string",
				"timeZone":"string"
			},
			"required":[
				"kind"
			]
			
		},
		"employeeDetail":{
			"type":"object",
			"properties":{
				"kind":{
					"enum":[
						"employeeDetail"
					]
					
				},
				"companyName":"string",
				"profileId":"integer",
				"roleId":"integer"
			}
			
		},
		"required":[
			"kind"
		]
		
	},
	"required":[
		"identity",
		"personDetail",
		"employeeDetail"
	]

}

