                "accept": {
                    "description": "Allowable file mime types",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "maxSize": {
                    "description": "Maximum size of the file in bytes",
                    "type": "integer"
                },
                "signatureRequired": {
                    "description": "If the document must be signed",
                    "type": "boolean"
                }
            }
        },

        "tas-audio": {
            "$schema": "http://json-schema.org/draft-04/schema",
